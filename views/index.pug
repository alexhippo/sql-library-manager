extends layout

block content
  h1= title
  p  
    a(href="/books/new").button Create New Book 
  table 
    thead 
      tr 
        td Title 
        td Author 
        td Genre 
        td Year
    tbody
      each book in books
        tr 
          td
            a(href=`/books/${book.id}`) #{book.title}
          td= book.author 
          td= book.genre
          td= book.year
